---
import { SearchField } from "@components/SearchField";
import { Icon } from "astro-icon/components";
---

<header
  class="mt-10 flex h-14 w-[calc(100%-3.2rem)] max-w-7xl items-center justify-center gap-x-4"
>
  <a
    class="size-9 place-content-center place-items-center rounded shadow-up hover:shadow-down"
    href="/"
  >
    <Icon
      class="h-6 w-6"
      name="ant-design:home-filled"
      aria-label="家アイコン。ホームに戻る。"
    />
  </a>

  <form class="w-full flex-1" method="GET">
    <SearchField />
  </form>
</header>
